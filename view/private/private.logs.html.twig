{% extends "template.html.twig" %}

{% block title %}{{ parent() }} | Private{% endblock %}

{% block hero %}
    <div class="flex flex-col mt-12 mx-auto w-fit items-center">
        <div class="flex flex-col mx-auto w-fit items-center">

            <h3 class="text-3xl text-red-600" id="systemMessage">{% if systemMessage %}{{ systemMessage }}{% endif %}   </h3>

        </div>
        {% if sessionRole == NULL %}
            <form action="" method="post">
                <label for="password">Password : </label>
                <input class="border border-gray-400 focus:outline-slate-400 rounded-md w-full shadow-sm px-5 py-2" type="password" id="password" name="password" placeholder="Password" autofocus>
                <button type="submit">Go</button>
            </form>
        {% else %}
            {% include "private/inc/_logTable.html.twig" %}
        {% endif %}
    </div>
{% endblock %}
