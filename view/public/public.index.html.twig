{% endblock %}
{% block sectionOne %}
    <div class="flex flex-col mt-8 w-fit mx-auto gap-y-12 lg:gap-y-8 text-center text-xl lg:text-sm font-semibold text-gray-700">
        <div>
            <p>Rue de Roumanie, 28</p>
            <p>1060 Bruxelles</p>
        </div>
        <div>
            <p>+32 &lpar;0&rpar; 852 62 36</p>
        </div>
        <div>
            <p><a href="mailto:info@librairie-poetini.be" class="text-green-500 text-xl lg:text-sm">info@librairie-poetini.be</a></p>
        </div>
        <div>
            <p>TVA : BE 0 554 631 548</p>
        </div>
        <a href="https://www.librel.be/magasins/Saint-gilles/Poetini-6208/"
           target="_blank"
           class="flex flex-col items-center mb-6">
            <button class="track-click mt-4 px-4 py-2 border border-gray-400 rounded-lg hover:bg-green-500 hover:text-white transition duration-200 ease-in-out focus:outline-none"
                    id="librelButton">
                Reserver un livre
            </button>
